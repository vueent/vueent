{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "noStrictGenericChecks": true,
    "paths": {
      "@vueent/*": ["packages/*/src"],
      "@tests/*": ["packages/*/tests"],
      "@vueent/core/*": ["packages/core/src/*"],
      "@tests/core/*": ["packages/core/tests/*"],
      "@vueent/mix-models/*": ["packages/mix-models/src/*"],
      "@tests/mix-models/*": ["packages/mix-models/tests/*"],
      "@vueent/reactive/*": ["packages/reactive/src/*"],
      "@tests/reactive/*": ["packages/reactive/tests/*"],
      "@vueent/store/*": ["packages/store/src/*"],
      "@tests/store/*": ["packages/store/tests/*"]
    },
    "lib": ["es2020"]
  },
  "exclude": ["node_modules", "dist"]
}
